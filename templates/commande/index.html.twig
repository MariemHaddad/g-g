
{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}


{% block body %}
    <style>
        table , tr, th , td {
            border: 2px solid;
        }



    </style>

    <h1>Commande index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Quantite</th>
            <th>Date_ajout</th>
            <th>Adresse</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.quantite }}</td>
                <td>{{ commande.dateAjout ? commande.dateAjout|date('Y-m-d') : '' }}</td>
                <td>{{ commande.adresse }}</td>
                <td>
                    <a href="{{ path('app_commande_show', {'id': commande.id}) }}">Afficher</a>
                    <a href="{{ path('app_commande_edit', {'id': commande.id}) }}">Modifier</a>




                </td>
            </tr>

        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commande_new') }}">Create new</a>
{% endblock %}

