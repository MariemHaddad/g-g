{% extends 'base.html.twig' %}

{% block title %}Facture index{% endblock %}

{% block body %}
    <style>
        table , tr, th , td {
            border: 2px solid;
        }



    </style>
    <h1>Facture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Created_at</th>
                <th>Prix</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.id }}</td>
                <td>{{ facture.createdAt ? facture.createdAt|date('Y-m-d') : '' }}</td>
                <td>{{ facture.prix }}</td>
                <td>{{ facture.adresse }}</td>
                <td>
                    <a href="{{ path('app_facture_show', {'id': facture.id}) }}">Afficer</a>
                    <a href="{{ path('app_facture_edit', {'id': facture.id}) }}">Modifier</a>

                </td>
            </tr>
            <tr>
            <a href="{{ path('app_commande_index') }}">liste des Commande</a>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_facture_new') }}">Create new</a>
{% endblock %}
